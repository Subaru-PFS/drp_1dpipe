{
    "lambdarange": [
        3900,
        12500
    ],
    "continuumRemoval": {
        "method": "IrregularSamplingMedian",
        "medianKernelWidth": 400
    },
    "objects":["galaxy"],
    "galaxy": {
        "redshiftrange": [
            0.01,
            6.0
        ],
        "redshiftstep": 0.0001,
        "redshiftsampling": "log",
        "template_dir": "templates/BC03_sdss_tremonti21",
